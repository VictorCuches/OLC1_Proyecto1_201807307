package AnalizadoresFCA; 
import java_cup.runtime.*;

parser code 
{:
    /**
     * Método al que se llama automáticamente ante algún error sintactico.
     **/ 
    public void syntax_error(Symbol s){ 
        System.out.println("Error Sintáctico en la Línea " + (s.left) +
        " Columna "+s.right+ ". No se esperaba este componente: " +s.value+"."); 
    } 

    /**
     * Método al que se llama automáticamente ante algún error sintáctico 
     * en el que ya no es posible una recuperación de errores.
     **/ 
    public void unrecovered_syntax_error(Symbol s) throws java.lang.Exception{ 
        System.out.println("Error síntactico irrecuperable en la Línea " + 
        (s.left)+ " Columna "+s.right+". Componente " + s.value + 
        " no reconocido."); 
    }  
:} 

terminal String LLAIZQ, LLADER;
terminal String PTCOMA;
terminal String GEREPES;
terminal String COMPARE, DEFGLOBAL;

terminal String IDENTIFI, STRINGO, DOUBLE;



non terminal inicio;
non terminal instrucciones, relleno;
non terminal contenido;
non terminal variables, declaracion, convariables;



start with inicio; 

inicio ::=  instrucciones 
| error instrucciones
| error
;

instrucciones ::= GEREPES LLAIZQ contenido LLADER instrucciones
| GEREPES LLAIZQ contenido LLADER
;

contenido ::= contenido relleno
| relleno
;

relleno ::= DEFGLOBAL LLAIZQ declaracion LLADER 
| COMPARE PTCOMA

;

declaracion ::= STRINGO IDENTIFI PTCOMA
;